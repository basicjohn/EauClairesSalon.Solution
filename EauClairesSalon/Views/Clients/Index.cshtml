@{
  Layout = "_Layout";
}

@using EauClairesSalon.Models;
@model List<EauClairesSalon.Models.Client>;
<main class="container">
  <h1>Clients</h1>

  @if (@Model.Count == 0)
  {
    <h3>No clients have been added yet!</h3>
  }

  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
  }

  <p>@Html.ActionLink("Add new client", "Create")</p>
</main>